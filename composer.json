{
    "name": "laravelio/portal",
    "description": "The source code for the Laravel.io community portal.",
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "^7.1",
        "bugsnag/bugsnag-laravel": "^2.4",
        "guzzlehttp/guzzle": "^6.2",
        "laravel/framework": "5.3.*",
        "laravel/socialite": "^2.0",
        "laravelcollective/html": "^5.3",
        "league/commonmark": "^0.15.2",
        "tijsverkoyen/akismet": "^1.1"
    },
    "require-dev": {
        "doctrine/dbal": "^2.5",
        "fzaninotto/faker": "^1.6",
        "jakub-onderka/php-console-highlighter": "^0.3.2",
        "jakub-onderka/php-parallel-lint": "^0.9.2",
        "laravel/homestead": "^5.0",
        "mockery/mockery": "^0.9.5",
        "phpspec/phpspec": "^3.1",
        "phpunit/phpunit": "^5.6",
        "symfony/css-selector": "^3.1",
        "symfony/dom-crawler": "^3.1"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize"
        ],
        "test": "phpunit --stop-on-failure",
        "spec": "phpspec run"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    }
}
